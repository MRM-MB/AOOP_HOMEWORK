<Window
    x:Class="ImageEditorApp.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="SuperSquaresImages"
    Background="#F5F5F5"
    Icon="Icons/Logo.png">

    <Grid>
        <!--  Define four rows with better spacing  -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!--  Title  -->
            <RowDefinition Height="0.8*" />
            <!--  Image Grid  -->
            <RowDefinition Height="Auto" />
            <!--  Buttons  -->
            <RowDefinition Height="0.1*" />
            <!--  Status Text  -->
        </Grid.RowDefinitions>

        <!--  Title Section  -->
        <StackPanel
            Grid.Row="0"
            Margin="0,30,0,20"
            HorizontalAlignment="Center">
            <!--  Moved Down  -->
            <Border
            Margin="10, 10, 10, 5"
            Padding="10"
            Background="LightBlue" 
            CornerRadius="15">
                <TextBlock
                FontSize="38"
                FontWeight="Bold"
                Foreground="Black"
                HorizontalAlignment="Center"
                Text="SuperSquaresImages" />
            </Border>
            <TextBlock
                Margin="0,10,0,0"
                HorizontalAlignment="Center"
                FontSize="18"
                FontStyle="Italic"
                Foreground="Gray"
                Text="Made by Luigi Colluto and Manish Raj Moriche" />
            <!--  More Separation  -->
        </StackPanel>

        <!--  Image Grid (Centered)  -->
        <ScrollViewer Grid.Row="1"
                    HorizontalScrollBarVisibility="Auto"
                    VerticalScrollBarVisibility="Auto">
            <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                
                <!-- Placeholder when there isn't an image -->
                <Border x:Name="PlaceholderBorder"
                        Background="#EFEFEF"
                        BorderBrush="Gray"
                        BorderThickness="2"
                        CornerRadius="10"
                        Padding="20"
                        Width="400"
                        Height="400"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Opacity="1"> <!-- The placeholder is visible at the beginning -->
                    <TextBlock Text="Your image will be displayed here"
                            FontSize="16"
                            Foreground="Gray"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontStyle="Italic"/>
                </Border>


                <!-- Area in which the image will be displayed -->
                <UniformGrid x:Name="PixelGrid" />
                
            </Grid>
        </ScrollViewer>


        <!--  Buttons (Larger, Stylish)  -->
        <StackPanel
            Grid.Row="2"
            Margin="5"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                Margin="10"
                Padding="10,5"
                Background="Blue"
                BorderBrush="DarkBlue"
                BorderThickness="2"
                Click="OpenFile_Click"
                Content="Open File ðŸ“‚"
                CornerRadius="10"
                FontSize="30"
                FontWeight="Bold"
                Foreground="White" />
            <Button
                Margin="10"
                Padding="10,5"
                Background="Green"
                BorderBrush="DarkGreen"
                BorderThickness="2"
                Click="SaveFile_Click"
                Content="Save File ðŸ’¾"
                CornerRadius="10"
                FontSize="30"
                FontWeight="Bold"
                Foreground="White" />
            <Button
                Margin="10"
                Padding="10,5"
                Background="Orange"
                BorderBrush="DarkOrange"
                BorderThickness="2"
                Click="FlipVertically_Click"
                Content="Flip Vertically â†•ï¸"
                CornerRadius="10"
                FontSize="30"
                FontWeight="Bold"
                Foreground="White" />
            <Button
                Margin="10"
                Padding="10,5"
                Background="Orange"
                BorderBrush="DarkOrange"
                BorderThickness="2"
                Click="FlipHorizontally_Click"
                Content="Flip Horizontally â†”ï¸"
                CornerRadius="10"
                FontSize="30"
                FontWeight="Bold"
                Foreground="White" />
        </StackPanel>

        <!--  Status Message (Moved Up, Larger)  -->
        <TextBlock
            x:Name="StatusText"
            Grid.Row="3"
            Margin="5,0,5,10"
            HorizontalAlignment="Center"
            FontSize="24"
            FontWeight="Bold"
            Foreground="Black" />
    </Grid>
</Window>