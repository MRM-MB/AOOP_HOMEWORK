<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:UniversityManagementApp.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="UniversityManagementApp.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/Logo.png"
        Title="UniversityManagementApp">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid>
        <Grid.Background>
            <ImageBrush Source="/Assets/MainWinBackground.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />      
            <RowDefinition Height="2*" />    
            <RowDefinition Height="*" />    
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center" 
                    Margin="0,80,0,0" 
                    Spacing="20">
            <Button 
                IsVisible="{Binding CanLogin}"
                Width="300"
                Height="80"
                HorizontalAlignment="Center" 
                HorizontalContentAlignment="Center" 
                VerticalContentAlignment="Center" 
                Foreground="White"
                Command="{Binding Login}"
                FontSize="30"
                FontWeight="Bold"
                Background="#CF0303"
                Content="Get Started"
                Name="LoginButton"
                CornerRadius="10">
                <Button.Styles>
                    <Style Selector="Button:hover">
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Background" Value="#A00000"/>
                    </Style>
                </Button.Styles>
            </Button>

            <TextBlock Text="{Binding LoginStatusMessage}"
                       FontSize="24"
                       Foreground="White"
                       HorizontalAlignment="Center"/>
        </StackPanel>

        <TextBlock Grid.Row="2"
                   Text="Â© 2025 Luigi Colluto and Manish Raj Moriche. All rights reserved."
                   FontSize="16"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   Margin="0,0,0,5"/>
    </Grid>
</Window>
