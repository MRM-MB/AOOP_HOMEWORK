<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:UniversityManagementApp.ViewModels"
        x:Class="UniversityManagementApp.Views.LoginView"
        x:DataType="vm:LoginViewModel"
        Title="Login"
        Icon="/Assets/Logo.png"
        Width="400"
        Height="570"
        Background="#F5F5F5">
    
    <Window.Styles>
        <Style Selector="TextBox">
            <Setter Property="Background" Value="#E3F2FD"/> <!-- Light blue background -->
            <Setter Property="BorderBrush" Value="#64B5F6"/> <!-- Blue border -->
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="5"/>
        </Style>
    </Window.Styles>

    <TabControl>
        <!-- Login Page -->
        <TabItem Header="ğŸ”‘ Login" VerticalContentAlignment="Center">
            <StackPanel Margin="20" Spacing="15">
                <TextBlock Text="ğŸ‘¤ Choose role:" FontSize="14" FontWeight="Bold"/>
                <ComboBox Name="UserTypeComboBox" SelectedIndex="0" HorizontalAlignment="Stretch">
                    <ComboBoxItem>Student</ComboBoxItem>
                    <ComboBoxItem>Teacher</ComboBoxItem>
                </ComboBox>
                <TextBlock Text="ğŸ˜Š Username:" FontSize="14" FontWeight="Bold"/>
                <TextBox Name="UsernameTextBox" Watermark="Username"/>
                <TextBlock Text="ğŸ”’ Password:" FontSize="14" FontWeight="Bold"/>
                <TextBox Name="PasswordBox" Watermark="Password" PasswordChar="*"/>
                <TextBlock Name="ErrorMessage" 
                        Foreground="Red" 
                        FontSize="12"
                        TextWrapping="Wrap"
                        IsVisible="False"/>
                <Button Name="LoginButton" 
                        Content="Login" 
                        HorizontalAlignment="Center"
                        Width="120"
                        Height="40"
                        Margin="0,10,0,0"
                        FontSize="16"
                        Background="#E0E0E0"
                        Foreground="Black"
                        Click="LoginButton_Click"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"/>
            </StackPanel>
        </TabItem>

        <!-- Create Account Page -->
        <TabItem Header="ğŸ“ Sign up" VerticalContentAlignment="Center">
            <StackPanel Margin="20" Spacing="15">
                <TextBlock Text="ğŸ‘¤ Choose role:" FontSize="14" FontWeight="Bold"/>
                <ComboBox Name="UserTypeComboBoxCA" SelectedIndex="0" HorizontalAlignment="Stretch">
                    <ComboBoxItem>Student</ComboBoxItem>
                    <ComboBoxItem>Teacher</ComboBoxItem>
                </ComboBox>
                <TextBlock Text="ğŸ˜Š Name:" FontSize="14" FontWeight="Bold"/> <!-- New line -->
                <TextBox Name="NameTextBoxCA" Watermark="Name"/> <!-- New line -->
                <TextBlock Text="ğŸ˜Š Username:" FontSize="14" FontWeight="Bold"/>
                <TextBox Name="UsernameTextBoxCA" Watermark="Username"/>
                <TextBlock Text="ğŸ”’ Password:" FontSize="14" FontWeight="Bold"/>
                <TextBox Name="PasswordBoxCA" Watermark="Password" PasswordChar="*"/>
                <TextBlock Text="ğŸ”’ Confirm Password:" FontSize="14" FontWeight="Bold"/>
                <TextBox Name="ConfirmPasswordBoxCA" Watermark="Confirm Password" PasswordChar="*"/>
                <TextBlock Name="ErrorMessageCA" 
                        Foreground="Red" 
                        FontSize="12"
                        TextWrapping="Wrap"
                        IsVisible="False"/>
                <Button Name="CreateAccountButton" 
                        Content="Create Account" 
                        HorizontalAlignment="Center"
                        Margin="0,10,0,0"
                        FontSize="16"
                        Background="#E0E0E0"
                        Foreground="Black"
                        Click="CreateAccountButton_Click"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"/>
            </StackPanel>
        </TabItem>
    </TabControl>
</Window>
